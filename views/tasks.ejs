<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('partials/config') %>
    <link rel="stylesheet" href="/stylesheets/tasks.css">
    <title>To-Do List</title>
</head>
<body>
    <%- include('./partials/header') %>
    <div class="container-fluid">
        <% tarefas.forEach( (tarefa)=> { %>
          <div class="card">
            <div class="card-body">
              <h3 class="card-title"><%= tarefa.tarefa %></h3>
              <p class="card-text"><%= tarefa.descricao %></p>
              <p><%= new Date(tarefa.inserido).toLocaleString('pt-BR', { timeZone: 'America/Sao_Paulo' }) %></p>
              <p><%= new Date(tarefa.prazo).toLocaleString('pt-BR', { timeZone: 'America/Sao_Paulo' }) %></p>
            </div>
          </div>
        <% }); %>    
    </div>
    <div>
      <a class="insert-link" href="/insert">+</a>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>